{
  "extends": ["stylelint-config-standard"],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "order/properties-alphabetical-order": true,
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "aspect-ratio"
        ]
      }
    ]
  }
}
